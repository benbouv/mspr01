{% extends 'base.html.twig' %}

{% block title %}Ma Plante{% endblock %}

{% block head %}
    <style>
      .overlay {
        height: 70%;
        width: 0;
        position: fixed;
        z-index: 1;
        margin-top: 2%;
        margin-bottom: 5%;
        margin-left: 20%;
        background-color: rgba(0, 0, 0, 0.75);
        overflow-x: hidden;
        transition: 0.5s;
      }
      .overlay-content {
        position: relative;
        top: 10%;
        width: 100%;
        text-align: center;
        margin-top: 30px;
      }
      .overlay .formulaire {
        padding: 10px;
        text-decoration: none;
        font-size: 32px;
        color: #b9c7cf;
        display: block;
        transition: 0.4s;
      }
      .overlay a {
        padding: 10px;
        text-decoration: none;
        font-size: 32px;
        color: #b9c7cf;
        display: block;
        transition: 0.4s;
      }
      .overlay a:hover,
      .overlay a:focus {
        color: #eeeeee;
      }
      .overlay .close {
        position: absolute;
        top: 10px;
        right: 35px;
        font-size: 50px;
      }
      @media screen and (max-height: 450px) {
        .overlay a {
          font-size: 20px
        }
        .overlay .closed {
          font-size: 40px;
          top: 15px;
          right: 35px;
        }
      }
      .card-body {
          min-height: 80px;
          min-width: 260px;
          text-align: center;
      }

      .testimonial-group > .row {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }
      .testimonial-group > .row > .col-4 {
        display: inline-block;
      }
      .testimonial-group > .row > .card {
        display: inline-block;
      }




      .chat-log {
        padding: 40px 0 114px;
        height: auto;
        overflow: auto;
      }
      .chat-log__item {
        background: #fafafa;
        padding: 10px;
        margin: 0 auto 20px;
        max-width: 80%;
        float: left;
        border-radius: 4px;
        box-shadow: 0 1px 2px rgba(0,0,0,.1);
        clear: both;
        text-align: left;
      }

      .chat-log__item.chat-log__item--own {
        float: right;
        background: #DCF8C6;
        text-align: right;
      }

      .chat-form {
        background: #DDDDDD;
        padding: 40px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
      }

      .chat-log__author {
        margin: 0 auto .5em;
        font-size: 14px;
        font-weight: bold;
      }
    </style>
{% endblock %}


