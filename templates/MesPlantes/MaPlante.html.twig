{% extends 'base.html.twig' %}

{% block title %}Mes Plantes{% endblock %}

{% block head %}
    <style>
      body {
        font-family: 'Veranda', sans-serif;
      }
      span {
        font-size: 22px;
        cursor: pointer
      }
      .overlay {
        height: 70%;
        width: 0;
        position: fixed;
        z-index: 1;
        margin-top: 2%;
        margin-bottom: 5%;
        margin-left: 20%;
        background-color: rgba(0, 0, 0, 0.75);
        overflow-x: hidden;
        transition: 0.5s;
      }
      .overlay-content {
        position: relative;
        top: 10%;
        width: 100%;
        text-align: center;
        margin-top: 30px;
      }
      .overlay .formulaire {
        padding: 10px;
        text-decoration: none;
        font-size: 32px;
        color: #b9c7cf;
        display: block;
        transition: 0.4s;
      }
      .overlay a {
        padding: 10px;
        text-decoration: none;
        font-size: 32px;
        color: #b9c7cf;
        display: block;
        transition: 0.4s;
      }
      .overlay a:hover,
      .overlay a:focus {
        color: #eeeeee;
      }
      .overlay .close {
        position: absolute;
        top: 10px;
        right: 35px;
        font-size: 50px;
      }
      @media screen and (max-height: 450px) {
        .overlay a {
          font-size: 20px
        }
        .overlay .closed {
          font-size: 40px;
          top: 15px;
          right: 35px;
        }
      }
    </style>
{% endblock %}


{% block body %}




    <p>{{ planteselected.Nom }}</p>



    {# element contextuel #}
    <div id="DivContextuelCarte" class="overlay">
        <a href="javascript:void(0)" class="closed" onclick="closeNav('DivContextuelCarte')" style="position: absolute; left: 260px">&times;</a>
    </div>



    <script>

        //effets des cartes
        function overclickbrigth($byId) {
            el=document.getElementById($byId);
            el.style.borderColor = "hsla(60, 100%, 50%, 0.3)";
            el.style.borderWidth = "6px";
        }
        function overflyingbrigth($byId) {
            el=document.getElementById($byId);
            el.style.borderColor = "hsla(120, 100%, 50%, 0.3)";
            el.style.borderWidth = "3px";
        }
        function nooverflyingbrigth($byId) {
            el=document.getElementById($byId);
            el.style.borderColor = "rgba(0, 0, 0, 0.2)";
            el.style.borderWidth = "1px";
        }

        
        //clique droit overlays
        function ClicDroitCarte(elementself) {
            el=document.getElementById("DivContextuelCarte");
            el.style.width = "20em";
            el.dataset.idplante = elementself.dataset.idplante;
        }
        function closeNav($idnav) {
            el=document.getElementById($idnav);
            el.style.width = "0em";
        }
        function GetSupprPlanteId(){
            el=document.getElementById("DivContextuelCarte");
            elinput=document.getElementById("idplanteinput");
            elinput.value = el.dataset.idplante;
        }


    </script>
{% endblock %}
