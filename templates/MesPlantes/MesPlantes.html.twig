{% extends 'base.html.twig' %}

{% block title %}Mes Plantes{% endblock %}

{% block head %}
    <style>
      body {
        font-family: 'Veranda', sans-serif;
      }
      span {
        font-size: 22px;
        cursor: pointer
      }
      .overlay {
        height: 70%;
        width: 0;
        position: fixed;
        z-index: 1;
        margin-top: 2%;
        margin-bottom: 5%;
        margin-left: 25%;
        background-color: rgba(0, 0, 0, 0.55);
        overflow-x: hidden;
        transition: 0.5s;
      }
      .overlay-content {
        position: relative;
        top: 15%;
        width: 100%;
        text-align: center;
        margin-top: 30px;
      }
      .overlay a {
        padding: 10px;
        text-decoration: none;
        font-size: 32px;
        color: #b9c7cf;
        display: block;
        transition: 0.4s;
      }
      .overlay a:hover,
      .overlay a:focus {
        color: #eeeeee;
      }
      .overlay .close {
        position: absolute;
        top: 10px;
        right: 35px;
        font-size: 50px;
      }
      @media screen and (max-height: 450px) {
        .overlay a {
          font-size: 20px
        }
        .overlay .closed {
          font-size: 40px;
          top: 15px;
          right: 35px;
        }
      }
    </style>
{% endblock %}


{% block body %}
    <div id="navoverlay" class="overlay">
      <a href="javascript:void(0)" class="closed" onclick="closeNav()" style="position: absolute; left: 270px";>&times;</a>
      <div class="overlay-content">
        <a href="#">Books</a>
        <a href="#">Quizzes</a>
        <a href="#">Snippets</a>
        <a href="#">Tools</a>
      </div>
    </div>


    <div class="container">
        <h1>Vos derni√®res plantes</h1>
        <div class="row flex">
            <div class="col-3" style="height: 15em; width: 9em">
                <span onclick="openNav()">
                    <div class="card" id="overflybb" onmousedown="overclickbrigth(id)" onmouseup="overflyingbrigth(id)" onmouseover="overflyingbrigth(id)" onmouseout="nooverflyingbrigth(id)" style="height: 8.7em; text-align: center;">
                        <img src="{{ asset('build/img/icon-add.png') }}" alt="..." style=" 
                            transform:scale(0.75);
                            padding: 1em;
                            margin-top: 1.6em;"
                        >
                    </div>
                </span>
            </div>
            
            {% for plante in mesplantes %}
                <div class="col-3" style="height: 15em; width: 9em">
                    <a href="#" style="text-decoration: none;">
                        <div class="card" id="overfly{{ loop.index }}" onmousedown="overclickbrigth(id)" onmouseup="overflyingbrigth(id)" onmouseover="overflyingbrigth(id)" onmouseout="nooverflyingbrigth(id)" style="height: 12em; 
                            color: black;
                            border-color:;
                            ">
                            <img src="{{ asset('build/img/logo-cycloop.png') }}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h4 class="card-title" style="text-align: center;">{{ plante.Nom }}</h4>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <script>
        function openNav() {
            el=document.getElementById("navoverlay");
            el.style.width = "20em";
        }
        function closeNav() {
            el=document.getElementById("navoverlay");
            el.style.width = "0em";
        }
        function overclickbrigth($byId) {
            el=document.getElementById($byId);
            el.style.borderColor = "hsla(60, 100%, 50%, 0.3)";
            el.style.borderWidth = "6px";
        }
        function overflyingbrigth($byId) {
            el=document.getElementById($byId);
            el.style.borderColor = "hsla(120, 100%, 50%, 0.3)";
            el.style.borderWidth = "3px";
        }
        function nooverflyingbrigth($byId) {
            el=document.getElementById($byId);
            el.style.borderColor = "rgba(0, 0, 0, 0.2)";
            el.style.borderWidth = "1px";
        }
    </script>
{% endblock %}
