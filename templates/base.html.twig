<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="header-menu">
            <a id="logo-cycloop1" class="logo-cycloop" href="{{ path('app_home') }}" style="text-decoration:none">
            <img class="img-cycloop" src="{{ asset('build/img/logo-cycloop.png') }}">
            </a>
            <div class="right-group">
                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="label" href="{{ path('app_login') }}" style="text-decoration:none">
                        Connexion
                    </a>
                    <a class="label" href="{{ path('app_register') }}" style="text-decoration:none">
                        Inscription
                    </a>
                {% endif %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <button type="button" class="p-button-rounded" style="cursor: pointer;">
                        <span class="p-button-label">mon compte</span>
                    </button>
                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
